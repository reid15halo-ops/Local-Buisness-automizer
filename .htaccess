# ============================================
# FreyAI Visions Demo - Security Headers
# Content Security Policy & Production Headers
# ============================================

<IfModule mod_headers.c>
    # Content Security Policy (CSP)
    # Prevents XSS, injection attacks, and unauthorized resource loading
    #
    # Directive explanations:
    #   default-src 'self'        - Baseline: only load resources from same origin
    #   script-src                - Controls JavaScript execution sources
    #     'self'                  - Scripts from same origin only (no unsafe-inline)
    #     cdn.sheetjs.com         - SheetJS (Excel export functionality)
    #     cdnjs.cloudflare.com    - cdnjs hosted libraries
    #     cdn.jsdelivr.net        - jsDelivr hosted libraries
    #   style-src 'self' 'unsafe-inline' - Inline styles needed for dynamic UI components
    #   font-src 'self'           - Web fonts from same origin only
    #   img-src 'self' data: blob: - Images, base64 data URIs, and blob URLs (PDF previews)
    #   connect-src               - Fetch/XHR destinations
    #     googleapis.com          - Gemini AI API
    #     *.supabase.co           - Supabase backend (auth, database, storage)
    #   worker-src 'self' blob:   - Web Workers including blob-created workers
    #   frame-src 'none'          - Disallow all iframes (clickjacking protection)
    #   object-src 'none'         - Disallow Flash/plugin objects
    #   base-uri 'self'           - Prevent base tag injection attacks
    #   form-action 'self'        - Forms may only submit to same origin
    #   upgrade-insecure-requests - Auto-upgrade HTTP to HTTPS
    #
    # TODO: Remove 'unsafe-inline' from script-src once all inline scripts are
    #       converted to event delegation (tracked in GitHub issue)
    # TODO: Remove 'unsafe-eval' if present after verifying no eval() usage
    # Each source in script-src must be explicitly reviewed before production
    Header set Content-Security-Policy "\
        default-src 'self'; \
        # TODO: nonces required before removing unsafe-inline from style-src
        script-src 'self' https://cdn.sheetjs.com https://cdnjs.cloudflare.com https://cdn.jsdelivr.net; \
        style-src 'self' 'unsafe-inline'; \
        font-src 'self'; \
        img-src 'self' data: blob:; \
        connect-src 'self' https://generativelanguage.googleapis.com https://*.supabase.co; \
        worker-src 'self' blob:; \
        frame-src 'none'; \
        object-src 'none'; \
        base-uri 'self'; \
        form-action 'self'; \
        upgrade-insecure-requests;"

    # X-Frame-Options: Prevent clickjacking
    Header always set X-Frame-Options "DENY"

    # X-Content-Type-Options: Prevent MIME-sniffing
    Header always set X-Content-Type-Options "nosniff"

    # X-XSS-Protection: Enable XSS filter (legacy browsers)
    Header always set X-XSS-Protection "1; mode=block"

    # Referrer-Policy: Control referrer information
    Header always set Referrer-Policy "strict-origin-when-cross-origin"

    # Permissions-Policy: Restrict browser features
    Header always set Permissions-Policy "\
        camera=(), \
        microphone=(), \
        geolocation=(), \
        payment=(), \
        usb=()"
</IfModule>

# ============================================
# Performance Optimization
# ============================================

<IfModule mod_deflate.c>
    # Enable GZIP compression
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>

<IfModule mod_expires.c>
    ExpiresActive On

    # Cache static assets for 1 year
    ExpiresByType text/css "access plus 1 year"
    ExpiresByType application/javascript "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"

    # Cache HTML for 1 hour
    ExpiresByType text/html "access plus 1 hour"

    # Cache JSON for 5 minutes
    ExpiresByType application/json "access plus 5 minutes"
</IfModule>

# ============================================
# MIME Types
# ============================================

<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType text/css .css
    AddType application/json .json
    AddType application/manifest+json .webmanifest
    AddType image/svg+xml .svg
</IfModule>

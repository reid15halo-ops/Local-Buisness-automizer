      "id": "node-error-handler",
      "name": "Error Handler: Log Fetch Error",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [680, 480],
      "credentials": {
        "supabaseApi": {
          "id": "cred-supabase-api",
          "name": "Supabase API"
        }
      },
      "notes": "ADDED: Error handler for GoCardless API failures or other unexpected errors."

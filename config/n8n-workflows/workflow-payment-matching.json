{
  "name": "Zahlungsabgleich (Bank Payment Auto-Matching)",
  "nodes": [
    {
      "parameters": {
        "rule": {
          "interval": [
            {
              "field": "cronExpression",
              "expression": "0 7 * * *"
            }
          ]
        },
        "timezone": "Europe/Berlin"
      },
      "id": "node-schedule-trigger",
      "name": "Daily 07:00 Berlin",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1.2,
      "position": [240, 300],
      "notes": "Runs every day at 07:00 Europe/Berlin (1 hour before dunning check). CRON: 0 7 * * *"
    },
    {
      "parameters": {
        "method": "GET",
        "url": "https://bankaccountdata.gocardless.com/api/v2/accounts/{{ $env[\"GOCARDLESS_ACCOUNT_ID\"] }}/transactions/",
        "sendHeaders": true,
        "headerParameters": {
          "parameters": [
            {
              "name": "Authorization",
              "value": "=Bearer {{ $env[\"GOCARDLESS_ACCESS_TOKEN\"] }}"
            },
            {
              "name": "Accept",
              "value": "application/json"
            }
          ]
        },
        "sendQuery": true,
        "queryParameters": {
          "parameters": [
            {
              "name": "date_from",
              "value": "={{ new Date(Date.now() - 7 * 24 * 60 * 60 * 1000).toISOString().split('T')[0] }}"
            },
            {
              "name": "date_to",
              "value": "={{ new Date().toISOString().split('T')[0] }}"
            }
          ]
        },
        "options": {
          "timeout": 20000
        }
      },
      "id": "node-fetch-transactions",
      "name": "Fetch Last 7 Days Transactions",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [460, 300],
      "notes": "GoCardless Open Banking API. Returns transactions.booked array and transactions.pending array. Requires GOCARDLESS_ACCESS_TOKEN and GOCARDLESS_ACCOUNT_ID."
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "has-transactions",
              "leftValue": "={{ $json[\"transactions\"] && $json[\"transactions\"][\"booked\"] && $json[\"transactions\"][\"booked\"].length }}",
              "rightValue": 0,
              "operator": {
                "type": "number",
                "operation": "gt"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "node-check-transactions",
      "name": "Has Transactions?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [680, 300]
    },
    {
      "parameters": {
        "fieldToSplitOut": "transactions.booked",
        "options": {
          "destinationFieldName": ""
        }
      },
      "id": "node-split-transactions",
      "name": "Split Booked Transactions",
      "type": "n8n-nodes-base.splitOut",
      "typeVersion": 1,
      "position": [900, 200],
      "notes": "Splits the transactions.booked array into individual items for per-transaction processing"
    },
    {
      "parameters": {
        "mode": "expression",
        "assignments": {
          "assignments": [
            {
              "id": "txn-amount",
              "name": "txn_amount",
              "value": "={{ parseFloat($json[\"transactionAmount\"][\"amount\"]) }}",
              "type": "number"
            },
            {
              "id": "txn-currency",
              "name": "txn_currency",
              "value": "={{ $json[\"transactionAmount\"][\"currency\"] }}",
              "type": "string"
            },
            {
              "id": "txn-id",
              "name": "txn_id",
              "value": "={{ $json[\"transactionId\"] || $json[\"internalTransactionId\"] }}",
              "type": "string"
            },
            {
              "id": "txn-date",
              "name": "txn_booking_date",
              "value": "={{ $json[\"bookingDate\"] }}",
              "type": "string"
            },
            {
              "id": "txn-creditor",
              "name": "txn_creditor_name",
              "value": "={{ $json[\"creditorName\"] || $json[\"debtorName\"] || '' }}",
              "type": "string"
            },
            {
              "id": "txn-reference",
              "name": "txn_reference",
              "value": "={{ $json[\"remittanceInformationUnstructured\"] || $json[\"remittanceInformationStructured\"] || '' }}",
              "type": "string"
            },
            {
              "id": "txn-iban",
              "name": "txn_creditor_iban",
              "value": "={{ $json[\"creditorAccount\"] ? $json[\"creditorAccount\"][\"iban\"] : ($json[\"debtorAccount\"] ? $json[\"debtorAccount\"][\"iban\"] : '') }}",
              "type": "string"
            }
          ]
        },
        "includeOtherFields": false,
        "options": {}
      },
      "id": "node-normalize-transaction",
      "name": "Normalize Transaction Fields",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.4,
      "position": [1120, 200],
      "notes": "Flattens GoCardless transaction object into normalized fields for easier downstream processing"
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "positive-amount",
              "leftValue": "={{ $json[\"txn_amount\"] }}",
              "rightValue": 0,
              "operator": {
                "type": "number",
                "operation": "gt"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "node-credit-only",
      "name": "Credit Transactions Only",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [1340, 200],
      "notes": "Only process incoming payments (positive amounts). Skip outgoing payments."
    },
    {
      "parameters": {
        "operation": "getAll",
        "tableId": "rechnungen",
        "returnAll": false,
        "limit": 5,
        "filterType": "string",
        "filterString": "=status=eq.offen&brutto=gte.{{ $json[\"txn_amount\"] - 0.01 }}&brutto=lte.{{ $json[\"txn_amount\"] + 0.01 }}"
      },
      "id": "node-lookup-by-amount",
      "name": "Lookup Rechnung by Amount (±0.01)",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [1560, 140],
      "credentials": {
        "supabaseApi": {
          "id": "cred-supabase-api",
          "name": "Supabase API"
        }
      },
      "notes": "Matches by brutto amount ±0.01 EUR on rechnungen with status=offen. Returns up to 5 candidates."
    },
    {
      "parameters": {
        "operation": "getAll",
        "tableId": "rechnungen",
        "returnAll": false,
        "limit": 5,
        "filterType": "string",
        "filterString": "=status=eq.offen&leistungsart=ilike.*{{ encodeURIComponent($json[\"txn_reference\"]) }}*"
      },
      "id": "node-lookup-by-reference",
      "name": "Lookup Rechnung by Reference",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [1560, 320],
      "credentials": {
        "supabaseApi": {
          "id": "cred-supabase-api",
          "name": "Supabase API"
        }
      },
      "notes": "Secondary matching strategy: match rechnung id/leistungsart in transaction reference field. rechnungen does not have invoice_number column; use leistungsart as reference."
    },
    {
      "parameters": {
        "mode": "combine",
        "combinationMode": "mergeByPosition",
        "options": {
          "clashHandling": {
            "values": {
              "resolveClash": "preferInput2"
            }
          }
        }
      },
      "id": "node-merge-match-results",
      "name": "Merge Match Results",
      "type": "n8n-nodes-base.merge",
      "typeVersion": 3,
      "position": [1780, 220],
      "notes": "Combines results from both lookup strategies. Input 1: amount match, Input 2: reference match."
    },
    {
      "parameters": {
        "conditions": {
          "options": {
            "caseSensitive": true,
            "leftValue": "",
            "typeValidation": "strict"
          },
          "conditions": [
            {
              "id": "match-found",
              "leftValue": "={{ $json[\"id\"] }}",
              "rightValue": "",
              "operator": {
                "type": "string",
                "operation": "notEmpty"
              }
            }
          ],
          "combinator": "and"
        },
        "options": {}
      },
      "id": "node-match-found",
      "name": "Match Found?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 2,
      "position": [2000, 220]
    },
    {
      "parameters": {
        "operation": "update",
        "tableId": "rechnungen",
        "filters": {
          "conditions": [
            {
              "keyName": "id",
              "condition": "eq",
              "keyValue": "={{ $json[\"id\"] }}"
            }
          ]
        },
        "dataToSend": "defineBelow",
        "fieldsToSend": {
          "fieldValues": [
            {
              "fieldId": "status",
              "fieldValue": "bezahlt"
            },
            {
              "fieldId": "paid_at",
              "fieldValue": "={{ $node[\"Normalize Transaction Fields\"].json[\"txn_booking_date\"] }}"
            }
          ]
        }
      },
      "id": "node-mark-paid",
      "name": "UPDATE rechnungen status='bezahlt'",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [2220, 120],
      "credentials": {
        "supabaseApi": {
          "id": "cred-supabase-api",
          "name": "Supabase API"
        }
      }
    },
    {
      "parameters": {
        "operation": "create",
        "tableId": "automation_log",
        "dataToSend": "defineBelow",
        "fieldsToSend": {
          "fieldValues": [
            {
              "fieldId": "action",
              "fieldValue": "payment_auto_matched"
            },
            {
              "fieldId": "target",
              "fieldValue": "={{ $node[\"Merge Match Results\"].json[\"id\"] }}"
            },
            {
              "fieldId": "metadata",
              "fieldValue": "={{ JSON.stringify({ rechnung_id: $node[\"Merge Match Results\"].json[\"id\"], kunde_name: $node[\"Merge Match Results\"].json[\"kunde_name\"], transaction_id: $node[\"Normalize Transaction Fields\"].json[\"txn_id\"], amount: $node[\"Normalize Transaction Fields\"].json[\"txn_amount\"], booking_date: $node[\"Normalize Transaction Fields\"].json[\"txn_booking_date\"] }) }}"
            }
          ]
        }
      },
      "id": "node-log-matched",
      "name": "INSERT automation_log (matched)",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [2440, 120],
      "credentials": {
        "supabaseApi": {
          "id": "cred-supabase-api",
          "name": "Supabase API"
        }
      }
    },
    {
      "parameters": {
        "operation": "create",
        "tableId": "automation_log",
        "dataToSend": "defineBelow",
        "fieldsToSend": {
          "fieldValues": [
            {
              "fieldId": "action",
              "fieldValue": "payment_unmatched"
            },
            {
              "fieldId": "target",
              "fieldValue": "={{ $json[\"txn_id\"] }}"
            },
            {
              "fieldId": "metadata",
              "fieldValue": "={{ JSON.stringify({ transaction_id: $json[\"txn_id\"], amount: $json[\"txn_amount\"], currency: $json[\"txn_currency\"], booking_date: $json[\"txn_booking_date\"], creditor_name: $json[\"txn_creditor_name\"], reference: $json[\"txn_reference\"], creditor_iban: $json[\"txn_creditor_iban\"], reason: 'no_rechnung_match', requires_manual_review: true }) }}"
            }
          ]
        }
      },
      "id": "node-manual-review",
      "name": "INSERT automation_log (manual review)",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
      "position": [2220, 340],
      "credentials": {
        "supabaseApi": {
          "id": "cred-supabase-api",
          "name": "Supabase API"
        }
      },
      "notes": "Logs unmatched transactions for manual review in the operations dashboard."
    },

              "value": "={{ $json[\"days_overdue\"] < 14 ? 'Zahlungserinnerung' : $json[\"days_overdue\"] < 30 ? '1. Mahnung' : $json[\"days_overdue\"] < 60 ? '2. Mahnung' : 'Letzte Mahnung vor Inkasso' }}",

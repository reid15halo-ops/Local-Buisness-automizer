      "id": "node-dunning-level-switch",
      "name": "Dunning Level Switch",
      "type": "n8n-nodes-base.switch",
      "typeVersion": 3,
      "position": [1300, 300],
      "notes": "Output 0: reminder (<14d), Output 1: first dunning (14-30d), Output 2: second dunning (30-60d), Output 3: final notice (>60d)"
